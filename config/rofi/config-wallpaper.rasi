/* Main Config (wallpaper) */

@import "~/.config/rofi/config.rasi"  

/* ---- Configuration ---- */ 
configuration {
  modi: "drun";
}

window {
  width: 60%;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "listview"];
}

entry {
  expand: true;
  placeholder: " 🎞️ Search / Choose Wallpaper";
  horizontal-align: 0.5;
  vertical-align: 0.5;
}

/* ---- Listview ---- */
listview {
  columns: 6;
  lines: 3;
  spacing: 10px;
  padding: 10px;
  flow: horizontal;
  fixed-width: false;
  fixed-height: true;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  border-radius: 12px;
  spacing: 0px;
  padding: 1px;
}

element-icon {
 vertical-align: 0.5;
 border-radius: 12px;
 padding: 2px;
}

element-text {
  vertical-align: 5.0;
  horizontal-align: 0.5;
  padding: 0px;
  margin: 0px;
}
